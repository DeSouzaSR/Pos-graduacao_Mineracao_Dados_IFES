# Confirma se a imagem é RGB ou tons de cinza
if len(img.shape) == 3 and img.shape[2] == 3:
  print("A imagem RGB.")
elif len(img.shape) == 2 or (len(img.shape) == 3 and img.shape[2] == 1):
